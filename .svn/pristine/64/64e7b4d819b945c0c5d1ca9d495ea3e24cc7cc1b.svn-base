@charset "EUC-KR";

/* 페이지 전체 높이 유지 */
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    font-family: 'Noto Sans KR', sans-serif;
}

/* 본문이 공간을 차지하도록 설정 */
.content {
    flex: 1;
}

/* footer 스타일 */
.footer {
	width: 100%;
	background-color: #FFFFFF; /* 배경색: 흰색 */
	color: #000000; /* 글자색: 검정 */
	text-align: center;
	padding: 15px 0;
	font-weight: bold;
	border-top: 2px solid black; /* 상단 테두리 추가 */
}

/* 푸터 안의 텍스트 정리 */
.footer p {
    margin: 5px 0;
    font-size: 13px;
}
