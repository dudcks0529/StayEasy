@charset "EUC-KR";
	body {
    font-family: Arial, sans-serif;
    text-align: center;
}
.container {
    width: 60%;
    margin: auto;
}
.search-box {
    background-color: #E3F2FD;
    padding: 15px;
    border-radius: 10px;
}
.input-group {
    margin: 10px 0;
}
label {
    font-weight: bold;
}
select, input {
    padding: 5px;
    font-size: 16px;
}
.btn-search {
    background-color: #64B5F6;
    color: white;
    font-size: 18px;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}
.btn-search:hover {
    background-color: #42A5F5;
}