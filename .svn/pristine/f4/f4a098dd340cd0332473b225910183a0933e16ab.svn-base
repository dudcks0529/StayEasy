body {
    text-align: center;
    font-family: 'Noto Sans KR', sans-serif;
    background-color: #ffffff;
}

h1 {
    font-size: 2.8em;
    font-weight: bold;
    color: #444;
    margin-bottom: 25px;
    text-align: center;
    letter-spacing: 1px;
    padding: 10px;
    border-bottom: 4px solid #ff7f9c;
    display: inline-block;
}

.back-search {
    display: inline-block;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    padding: 10px 15px;
    border-radius: 8px;
    background: #ff6b81;
    color: white;
    transition: 0.3s;
    margin-bottom: 20px;
}

.back-search:hover {
    background: #d83f5b;
}

.icon-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 30px;
}

.icon-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 70px; 
    margin-top: 30px;
}

.icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
}

.icon img {
    width: 90px; 
    height: 90px;
    margin-bottom: 15px; 
}

.icon span {
    display: block;
    font-size: 18px; 
    font-weight: bold;
    color: #444;
}

.icon:hover {
    transform: scale(1.15); 
}

@media (max-width: 900px) {
    .icon img {
        width: 60px;
        height: 60px;
    }
    .icon span {
        font-size: 14px;
    }
}

@media (max-width: 600px) {
    .icon img {
        width: 50px;
        height: 50px;
    }
    .icon span {
        font-size: 12px;
    }
}
