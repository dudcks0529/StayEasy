<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>장바구니 목록</title>
</head>
<body>
<div align="center">
<h1>장바구니</h1>
<c:forEach var="cart" items="${cartList}">
	<div class="cart-item">
            <img src="${pageContext.request.contextPath}/upload/${cart.room.room_image}" alt="객실 이미지">
            <div class="cart-info">
                <h2>${cart.room.accommodation.accname}</h2>
                <p>방 : ${cart.room.name}</p>
                <p>1박 : ${cart.room.price_per_night}원</p>
                <p>인원 : ${cart.count}명</p>
                <p>총 결제금액 : ${cart.total_price}원</p>
                <div class="date-box">
                	<fmt:formatDate value="${cart.check_in_date}" pattern="yyyy-MM-dd"/> ~ 
                	<fmt:formatDate value="${cart.check_out_date}" pattern="yyyy-MM-dd"/>
                </div>
                <div class="cart-buttons">
                    <button onclick="location.href='/reserv/reservGo?cartItemId=${cart.cartitem_id}'">예약</button>
                    <button onclick="location.href='/cart/delete?cartItemId=${cart.cartitem_id}'">삭제</button>
                </div>
            </div>
        </div>
</c:forEach>
</div>
</body>
</html>