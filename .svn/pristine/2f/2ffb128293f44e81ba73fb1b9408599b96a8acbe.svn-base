@charset "EUC-KR";

body {
    font-family: 'Noto Sans KR', sans-serif;
    background-color: #ffffff;
    text-align: center;
}

/* 전체 컨테이너 */
.container {
    width: 85%;
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
    padding: 30px 0;
}

/* 제목 */
h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 20px;
}

/* 숙소 검색하기 버튼 */
.back-search {
    display: inline-block;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    padding: 10px 15px;
    border-radius: 8px;
    background: #ff6b81;
    color: white;
    transition: 0.3s;
    margin-bottom: 20px;
}
.back-search:hover {
    background: #d83f5b;
}

/* 검색 필터 스타일 */
form {
    background: white;
    padding: 15px;
    border-radius: 12px;
    box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 20px;
}
form select, form input[type="text"], form input[type="submit"] {
    padding: 10px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 14px;
}
form input[type="text"] {
    width: 200px;
}
form input[type="submit"] {
    background-color: #87CEEB;
    color: white;
    font-weight: bold;
    cursor: pointer;
    border: none;
    transition: background-color 0.3s;
}
form input[type="submit"]:hover {
    background-color: #5CA6C9;
}

/* 숙소 리스트 (2열 유지) */
.grid-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2열 유지 */
    gap: 25px;
    justify-content: center;
    margin-top: 20px;
}

/* 카드 스타일 */
.card {
    background: white;
    border-radius: 16px;
    padding: 18px;
    text-align: center;
    box-shadow: 3px 5px 12px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}
.card:hover {
    transform: scale(1.03);
    box-shadow: 5px 8px 20px rgba(0, 0, 0, 0.15);
}
.card img {
    width: 100%;
    height: 180px;
    border-radius: 12px;
    object-fit: cover;
}
.card h3 {
    margin: 12px 0 6px;
    font-size: 18px;
    font-weight: bold;
    color: #222;
}
.card p {
    font-size: 15px;
    color: #555;
}

/* 가격 강조 스타일 */
.card p.price {
    font-size: 18px;
    font-weight: bold;
    color: #ff5733;
    margin-top: 5px;
}

/* 페이지네이션 */
.pagination {
    margin-top: 30px;
    display: flex;
    justify-content: center;
}
.pagination a {
    display: inline-block;
    padding: 8px 14px;
    margin: 4px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    background-color: #e0e0e0;
    color: #333;
    transition: background-color 0.3s ease-in-out;
}
.pagination a:hover {
    background-color: #A5C9CA;
    color: white;
}
.pagination .active {
    background-color: #007bff;
    color: white;
}
