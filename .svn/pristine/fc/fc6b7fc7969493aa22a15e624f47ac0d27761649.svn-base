<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>장바구니 목록</title>
<style type="text/css">
.cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 80%;
    padding: 15px;
    border-bottom: 1px solid #ccc;
}

.cart-item img {
    width: 250px; /* 이미지 크기 조정 */
    height: auto;
    border-radius: 10px;
}

.cart-info {
    flex: 1;
    padding: 0 20px;
}

.cart-buttons {
    display: flex;
    flex-direction: row;
    gap: 10px;
}

.cart-buttons button {
    padding: 10px 14px;
    font-size: 14px;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    white-space: nowrap;
}

.cart-buttons button:hover {
    background-color: #0056b3;
}

.checkout-container {
    text-align: center; /* 가운데 정렬 */
    margin-top: 30px; /* 위 간격 추가 */
}

.checkout-btn {
    padding: 15px 30px;
    font-size: 18px;
    font-weight: bold;
    background-color: #28a745; /* 녹색 버튼 */
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

.checkout-btn:hover {
    background-color: #218838; /* hover 시 색상 변경 */
}


</style>
</head>
<body>
<c:if test="${message != null}">
	<script>
		alert("${message}");
	</script>
</c:if>
<div align="center">
<h1>장바구니</h1>
<c:choose>
		<c:when test="${empty cartList }">
		<br/><br/><h2>장바구니가 비어있습니다.</h2>
		</c:when>
		<c:otherwise>
		
		
<c:forEach var="cart" items="${cartList}">
	
	<div class="cart-item">
    <img src="${pageContext.request.contextPath}/upload/${cart.room.room_image}" 
    alt="객실 이미지">
    
    <div class="cart-info">
        <h2>${cart.room.accommodation.accname}</h2>
        <p>방 : ${cart.room.name}</p>
        <p>1박 : ${cart.room.price_per_night}원</p>
        <p>인원 : ${cart.count}명</p>
        <p>총 결제금액 : ${cart.total_price}원</p>
        <div class="date-box">
            <fmt:formatDate value="${cart.check_in_date}" pattern="yyyy-MM-dd"/> ~ 
            <fmt:formatDate value="${cart.check_out_date}" pattern="yyyy-MM-dd"/>
        </div>
    </div>
    
    <div class="cart-buttons">
        <button onclick="goToPage('../cart/modify.html', '${cart.cartitem_id}')">
                  수정</button>
        <form action="../cart/delete.html" method="post">
        <input type="hidden" name="cartItemId" value="${cart.cartitem_id}">
        <button type="submit">삭제</button>
        </form>
    </div>
</div>
</c:forEach>
</c:otherwise>
</c:choose>
<c:if test="${not empty cartList}">
<form id="checkoutForm" action="../reserv/reservPayCart.html" 
method="post" onsubmit="return confirmCheckout()">
	<div class="checkout-container">
        <button class="checkout-btn" type="submit">결제하기</button>
    </div>
</form>
</c:if>
</div>
</body>
<script type="text/javascript">
function goToPage(url, cartItemId) {
    window.location.href = url + "?cartItemId=" + cartItemId;
}
function confirmCheckout() {
    return confirm("정말 결제하시겠습니까?"); // 확인을 누르면 true, 취소를 누르면 false
}
</script>
</html>