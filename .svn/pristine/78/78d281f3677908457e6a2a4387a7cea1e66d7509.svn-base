@charset "EUC-KR";
/* 기본적으로 페이지가 전체 높이를 차지하도록 설정 */
html, body {
	height: 100%;
	margin: 0;
	padding: 0;
	display: flex;
	flex-direction: column;
}

/* 본문 내용이 flex를 통해 footer를 밀어내도록 설정 */
.content {
	flex: 1; /* 본문이 남는 공간을 차지하도록 설정 */
}

/* footer 스타일 */
.footer {
	width: 100%;
	background-color: #FFFFFF; /* 배경색: 흰색 */
	color: #000000; /* 글자색: 검정 */
	text-align: center;
	padding: 15px 0;
	font-weight: bold;
	border-top: 2px solid black; /* 상단 테두리 추가 */
}
