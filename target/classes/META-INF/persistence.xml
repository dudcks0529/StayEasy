<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="stayEasy">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>model.Accommodation</class>
		<class>model.CartItem</class>
		<class>model.CartItem</class>
		<class>model.Category</class>
		<class>model.Entity</class>
		<class>model.Notice</class>
		<class>model.Reply</class>
		<class>model.Reservation</class>
		<class>model.Review</class>
		<class>model.User</class>
		<class>model.Room</class>
		<class>model.RoomId</class>
		<class>model.RoomUpdate</class>
		<class>model.AccUpdate</class>
		<properties>
			<property name="hibernate.dialect" 
				value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.connection.driver_class" 
				value="oracle.jdbc.driver.OracleDriver"/>
			<property name="hibernate.connection.url" 
				value="jdbc:oracle:thin:@//localhost:1521/xe"/>
			<property name="hibernate.connection.username" value="ID"/>
			<property name="hibernate.connection.password" value="PWD"/>
		</properties>
	</persistence-unit>
</persistence>